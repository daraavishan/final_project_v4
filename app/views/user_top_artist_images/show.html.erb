<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      User top artist image #<%= @user_top_artist_image.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/user_top_artist_images" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_user_top_artist_image/<%= @user_top_artist_image.id %>" class="btn btn-block btn-outline-secondary">
          Delete user top artist image
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @user_top_artist_image.user_id %>
      </dd>

      <dt>
        Image url
      </dt>
      <dd>
        <%= @user_top_artist_image.image_url %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@user_top_artist_image.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@user_top_artist_image.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit user top artist image
    </h2>

    <form action="/modify_user_top_artist_image/<%= @user_top_artist_image.id %>"  method="post" >
      <div class="form-group">
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="user_id_from_query" class="form-control" value="<%= @user_top_artist_image.user_id %>">
      </div>

      <div class="form-group">
        <label for="image_url_box">
          Image url
        </label>

        <input type="text" id="image_url_box" name="image_url_from_query" class="form-control" value="<%= @user_top_artist_image.image_url %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update user top artist image
      </button>
    </form>
  </div>
</div>

<hr>
