<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all friends
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new friend
    </h2>

    <form action="/insert_friend" method="post">
      <div class="form-group">
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="user_id_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="friend_id_box">
          Friend
        </label>

        <input type="text" id="friend_id_box" name="friend_id_from_query" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create friend
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Friend
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @friends.each do |friend| %>
      <tr>
        <td>
          <%= friend.id %>
        </td>

        <td>
          <%= friend.user_id %>
        </td>

        <td>
          <%= friend.friend_id %>
        </td>

        <td>
          <%= time_ago_in_words(friend.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(friend.updated_at) %> ago
        </td>

        <td>
          <a href="/friends/<%= friend.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
