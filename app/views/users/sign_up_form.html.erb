<div class="jumbotron text-center">
  <h1>Welcome and Sign Up </h1>
  <p></p> 
</div>


<form action="/insert_user_record" method="post">
  <div class="text-center">
    <label for="username_box">Username</label>
    <input id="username_box" name="input_username" placeholder="Choose a username..." type="text">
  </div>

  <div class="text-center">
    <label for="password_box">Password</label>
    <input id="password_box" name="input_password" placeholder="Choose a password..." type="password">
  </div>

  <div class="text-center">
    <label for="password_confirmation_box">Password Confirmation</label>
    <input id="password_confirmation_box" name="input_password_confirmation" placeholder="Confirm your password..." type="password">
  </div>

  <div class="text-center">
  <button>
    Sign Up
  </button>
  </div>
</form>